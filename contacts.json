{
  "$id": "https://github.com/getdock/schemas/contacts.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "User contacts",
  "title": "User contacts",
  "allOf": [
    {
      "$ref": "https://github.com/getdock/schemas/dock.json"
    }
  ],
  "definitions": {
    "contact": {
      "type": "object",
      "properties": {
        "firstName": {
          "type": "string"
        },
        "lastName": {
          "type": "string"
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "company": {
          "type": "string"
        },
        "position": {
          "type": "string"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string",
            "uniqueItems": true
          }
        },
        "connectedOn": {
          "type": "number",
          "format": "timestamp"
        },
        "source": {
          "type": "string",
          "description": "Optional field that denotes which platform this contact is coming from."
        },
        "subSource": {
          "type": "string",
          "description": "Optional field that denotes the kind of relationship this contact has with the User."
        }
      },
      "required": [
        "first_name",
        "last_name",
        "email"
      ]
    }
  },
  "type": "object",
  "properties": {
    "$data": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/contact"
      }
    }
  }
}